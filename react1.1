import React from 'react';
import { createRoot } from 'react-dom/client';

function ProductCard({ name, price, inStock }) {
  return (
    <div style={{background:'#fff',padding:20,borderRadius:8,width:200,boxShadow:'0 2px 6px rgba(0,0,0,0.2)'}}>
      <h2>{name}</h2>
      <p>Price: ${price}</p>
      <p>Status: {inStock ? 'In Stock' : 'Out of Stock'}</p>
    </div>
  );
}

function App() {
  const products = [
    { name: 'Laptop', price: 1200, inStock: true },
    { name: 'Headphones', price: 150, inStock: false },
    { name: 'Keyboard', price: 80, inStock: true }
  ];
  return (
    <div style={{display:'flex',gap:20,flexWrap:'wrap'}}>
      {products.map((p,i)=><ProductCard key={i} name={p.name} price={p.price} inStock={p.inStock}/>)}
    </div>
  );
}

createRoot(document.getElementById('root')).render(<App />);
